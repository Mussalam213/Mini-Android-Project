    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
           new ADDITEM().setVisible(true);
       String usn = jTextField1.getText().toString();
        String psw = jTextField2.getText().toString();

        String sql = "Select Username,Password from log WHERE Username = '"+usn+"' AND Password='"+psw+"' " ;

        
       
        try {
            ResultSet rs = st.executeQuery(sql);
        
            while(rs.next()){
            
                String usn1 = rs.getString("Username");
                String psw1 = rs.getString("Password");
             
               if(usn.equals(usn1)&&psw.equals(psw1))
                   JOptionPane.showMessageDialog(null, "Login Successfull");
               else
                    JOptionPane.showMessageDialog(null,"Incorrect Username or Password");
                jTextField1.setText("");
                jTextField2.setText("");
                
                JOptionPane.showMessageDialog(null,"User Registered");
                
                new ADDITEM().setVisible(true);
            }
            
        } catch (SQLException ex) {
           JOptionPane.showMessageDialog(null, ex);
        }
        
          JOptionPane.showMessageDialog(null,"User Registered");
                
             
}
